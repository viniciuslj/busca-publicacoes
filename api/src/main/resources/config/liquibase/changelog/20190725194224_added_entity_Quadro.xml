<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">


    <!--
        Added the entity Quadro.
    -->
    <changeSet id="20190725194224-1" author="jhipster">

        <createSequence sequenceName="quadro_sequence" startValue="1001" incrementBy="1"/>

        <createTable tableName="quadro" remarks="Quadros funcionais">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nome" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="nome_longo" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

        <loadData
            file="config/liquibase/data/quadro.csv"
            separator=";"
            tableName="quadro">
            <column name="id" type="numeric"/>
            <column name="nome" type="string"/>
            <column name="nome_longo" type="string"/>
        </loadData>

    </changeSet>

    <changeSet id="20190725194224-1-relations" author="jhipster">

    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
