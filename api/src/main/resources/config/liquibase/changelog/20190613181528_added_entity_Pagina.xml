    <!--
        Added the entity Pagina.
    -->
    <changeSet id="20190613181528-1" author="jhipster">
        <createSequence sequenceName="pagina_sequence" startValue="1" incrementBy="1"/>

        <createTable tableName="pagina">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="conteudo" type="clob">
                <constraints nullable="true" />
            </column>

            <column name="numero" type="integer">
                <constraints nullable="false" />
            </column>

            <column name="documento_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
